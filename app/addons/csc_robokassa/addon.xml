    <functions>
        <item for="install">fn_csc_robokassa_install</item>
        <item for="uninstall">fn_csc_robokassa_uninstall</item>
    </functions>

    <queries>
        <item for="install">
            ALTER TABLE `?:companies` ADD `csc_robokassa_merchant_id` VARCHAR(100) NOT NULL, ADD `csc_robokassa_split` VARCHAR(1) NOT NULL;
        </item>
        <item for="uninstall">
            ALTER TABLE `?:companies` DROP `csc_robokassa_merchant_id`, `csc_robokassa_split`;
        </item>

        <item for="install">ALTER TABLE ?:taxes ADD COLUMN tax_type VARCHAR(6) NOT NULL</item>
        <item for="uninstall">ALTER TABLE ?:taxes DROP COLUMN tax_type</item>
    </queries>
</addon>
